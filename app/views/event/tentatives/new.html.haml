- title t('.title')

= standard_form(@participation,
                buttons_top: false,
                submit_label: t('.title'),
                url: group_event_tentatives_path(@group, @event)) do |f|

  = f.error_messages

  = f.labeled(:person) do
    = f.hidden_field(:participant_id)
    = f.string_field(:person, placeholder: I18n.t('global.search.placeholder_person'),
                              data: { provide: 'entity', id_field: "#{f.object_name}_participant_id", url: query_group_event_tentatives_path })

  = form_buttons(f, submit_label: nil, cancel_url: group_event_path(@group, @event))
