- if @application.present?
  -  if show_event_participation_cancel_button?
    = action_button(t('.cancel_button'),
                    '#',
                    :'remove-circle',
                    title: t('.cancel_title'),
                    data: { toggle: 'popover', content: render('popover_cancel').to_str })

  - if show_event_participation_reject_button?
    = action_button(t('.reject_button'),
                    reject_group_event_participation_path,
                    :'thumbs-down')

  - if show_event_participation_absent_button?
    = action_button(t('.absent_button'),
                    absent_group_event_participation_path, :tag, method: :put)

  - if show_event_participation_attended_button?
    = action_button(t('.attended_button'),
                    attend_group_event_participation_path, :tag, method: :put)

  - if show_event_participation_assigned_button?
    = action_button(t('.assigned_button'),
                    assign_group_event_participation_path, :tag, method: :put)
